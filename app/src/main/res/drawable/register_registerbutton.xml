<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="@color/gray_disabled"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <selector>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <gradient android:angle="270"
                        android:startColor="@color/register_button_gradient_top"
                        android:endColor="@color/register_button_gradient_bottom"/>
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="30dp"/>
                    <gradient android:angle="270"
                        android:startColor="@color/register_button_gradient_top_clicked"
                        android:endColor="@color/register_button_gradient_bottom_clicked"/>
                </shape>
            </item>
        </selector>
    </item>
</selector>