<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_gradiented"
    tools:context=".registration.RegisterActivity">

    <org.multiverse.multiversetools.alternative.SpinnerWithTitle
        android:id="@+id/register_year"
        style="@style/spinnerUnderlinedRegister"
        android:textColor="@color/register_text"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_birthday_text"
        app:layout_constraintVertical_bias="0.048" />
    
    <TextView
        android:id="@+id/register_last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_last_name"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_title"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_last_name"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textPersonName"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_register"
        android:textColor="@color/register_text"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/register_first_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_first_name"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_title"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_first_name"
        android:layout_width="132dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textPersonName"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_username"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textPersonName"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_password"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_repeat_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_password_repeat"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_email"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_repeat_password"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/register_sex_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_sex"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email"
        app:layout_constraintVertical_bias="0.0" />

    <RadioGroup
        style="@style/register_radio_button_changing_colour"
        android:id="@+id/register_rbgroup_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_sex_text"
        app:layout_constraintVertical_bias="0.0" >

        <RadioButton
            android:id="@+id/register_male"
            style="@style/register_radio_button_changing_colour"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:buttonTint="@color/register_radio_button_border"
            android:fontFamily="@font/moon_bold"
            android:text="@string/male"
            android:textColor="@color/register_text"
            />

        <RadioButton
            android:id="@+id/register_female"
            style="@style/register_radio_button_changing_colour"
            android:layout_width="90dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:buttonTint="@color/register_radio_button_border"
            android:fontFamily="@font/moon_bold"
            android:text="@string/female"
            android:textColor="@color/register_text" />
    </RadioGroup>

    <TextView
        android:id="@+id/register_birthday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/moon_bold"
        android:text="@string/register_birthday"
        android:textColor="@color/register_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_rbgroup_sex"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textPassword"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password_text"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_repeat_password"
        android:layout_width="250dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textPassword"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_repeat_password_text"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="280dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:inputType="textEmailAddress"
        android:paddingTop="0dp"
        android:textColor="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email_text"
        app:layout_constraintVertical_bias="0.0" />

    <org.multiverse.multiversetools.alternative.SpinnerWithTitle
        android:id="@+id/register_month"
        style="@style/spinnerUnderlinedRegister"
        android:textColor="@color/register_text"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="6dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_birthday_text"
        app:layout_constraintVertical_bias="0.047" />

    <EditText
        android:id="@+id/register_day"
        android:layout_width="90dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/register_lines"
        android:ems="10"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/register_text"
        android:gravity="bottom"
        android:hint="DAY"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:paddingTop="0dp"
        android:paddingBottom="9dp"
        android:textColorHint="@color/register_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toEndOf="@+id/register_month"
        app:layout_constraintTop_toBottomOf="@+id/register_birthday_text"
        app:layout_constraintVertical_bias="0.00999999" />

    <CheckBox
        android:id="@+id/register_accept_service_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:buttonTint="@color/register_radio_button_border"
        android:fontFamily="@font/proximanova_regular"
        android:text="@string/register_terms_and_privacy"
        android:textColor="@color/register_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_month"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/register_registerButton"
        android:layout_width="126dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/register_registerbutton"
        android:enabled="false"
        android:fontFamily="@font/moon_bold"
        android:text="@string/login_registerbutton_text"
        android:textColor="@color/register_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_accept_service_privacy" />

    <TextView
        android:id="@+id/register_error_first_name"
        android:layout_width="160dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_username_text"
        app:layout_constraintEnd_toStartOf="@+id/register_last_name"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_last_name"
        android:layout_width="160dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_username_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toEndOf="@+id/register_error_first_name"
        app:layout_constraintTop_toBottomOf="@+id/register_last_name"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_username"
        android:layout_width="335dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_password_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_username"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_password"
        android:layout_width="330dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_repeat_password_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_repeat_password"
        android:layout_width="330dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_email_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_repeat_password"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_email"
        android:layout_width="330dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_sex_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_sex"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/register_birthday_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_rbgroup_sex"
        app:layout_constraintVertical_bias="0.26999998" />

    <TextView
        android:id="@+id/register_error_day"
        android:layout_width="160dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/register_accept_service_privacy"
        app:layout_constraintEnd_toStartOf="@+id/register_year"
        app:layout_constraintHorizontal_bias="0.31"
        app:layout_constraintStart_toEndOf="@+id/register_month"
        app:layout_constraintTop_toBottomOf="@+id/register_day"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/register_error_accept"
        android:layout_width="200dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/error"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/register_registerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_accept_service_privacy" />


</android.support.constraint.ConstraintLayout>