<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinnerUnderlinedRegister" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/register_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">@font/proximanova_regular</item>
        <item name="android:backgroundTint">@color/register_lines</item>
        <item name="android:background">@drawable/spinner_underlined</item>
    </style>

    <style name="spinner_birthdayTab" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/moon_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="register_radio_button_changing_colour" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/register_radio_button_color_selector</item>
        <item name="android:buttonTint">@drawable/register_radio_button_color_selector</item>
    </style>

    <style name="login_afterGoogleSignUp_radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@drawable/register_radio_button_color_selector</item>
        <item name="android:buttonTint">@drawable/login_after_google_signup_radiobutton_selector</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/login_background_gradient_top</item>
    </style>

    <style name="MainActivityStyle" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/login_background_gradient_top</item>
    </style>

</resources>
